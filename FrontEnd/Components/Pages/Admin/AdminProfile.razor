@page "/admprofile"
@using frontend.Components.index

<PageTitle>Admin Profile</PageTitle>

<div class="container mt-5">
    <div class="d-flex" style="justify-content: space-between;">
        <p class="fw-bold" style="font-size: 32px; color: #a91215;">Admin Profile</p>
        <a class="btn fw-bold loginBtn"
            style="width: 144px; height: 40px; position: relative; z-index: 2; margin-bottom: 10px; background-color: #a91215; color: white;">Logout</a>
    </div>
    <p class="fw-bold" style="font-size: 24px; color: #a91215;">Profile details</p>
    <div class="row">
        <p class="col-md-2 fw-semibold" style="color: #a91215;">First Name</p>
        <p class="col fw-semibold" style="color: #0000008d;">Navindu</p>
    </div>
    <div class="row" style="margin-top: -10px;">
        <p class="col-md-2 fw-semibold" style="color: #a91215;">Last Name</p>
        <p class="col fw-semibold" style="color: #0000008d;">Ashen</p>
    </div>
    <div class="row" style="margin-top: -10px;">
        <p class="col-md-2 fw-semibold" style="color: #a91215;">NIC</p>
        <p class="col fw-semibold" style="color: #0000008d;">1234567890</p>
    </div>
    <div class="row" style="margin-top: -10px;">
        <p class="col-md-2 fw-semibold" style="color: #a91215;">Contact number</p>
        <p class="col fw-semibold" style="color: #0000008d;">0712345678</p>
    </div>
    <div class="row" style="margin-top: -10px;">
        <p class="col-md-2 fw-semibold" style="color: #a91215;">Email</p>
        <p class="col fw-semibold" style="color: #0000008d;">navindu158@gmail.com</p>
    </div>
    <div class="row row-cols-1 row-cols-md-2 g-5 justify-content-center mb-5 mt-3">
        
        <div class="col">
            <div class="p-3 rounded" style="box-shadow: 0px 2px 5px 2px #0000006e;">
                <p class="fw-bold" style="font-size: 24px; color: #a91215;">Events</p>
                <div class="d-flex">
                    <p class="col-md-5 fw-semibold" style="color: #0000008d;">Approved events</p>
                    <p class="col fw-semibold" style="color: #0000008d;">12</p>
                </div>
                <div class="d-flex" style="margin-top: -10px;">
                    <p class="col-md-5 fw-semibold" style="color: #0000008d;">Pending events</p>
                    <p class="col fw-semibold" style="color: #0000008d;">5</p>
                </div>
                <a class="btn fw-bold loginBtn" href="/admallevents"
                    style="width: 100%; margin-bottom: 10px; background-color: #a91215; color: white;">See all</a>
            </div>
        </div>
        <div class="col">
            <div class="p-3 rounded d-flex flex-column" style="box-shadow: 0px 2px 5px 2px #0000006e; height: 200px; justify-content: space-between;">
                <p class="fw-bold" style="font-size: 24px; color: #a91215;">Users</p>
                <div class="d-flex">
                    <p class="col-md-5 fw-semibold" style="color: #0000008d;">Active users</p>
                    <p class="col fw-semibold" style="color: #0000008d;">12</p>
                </div>

                <a class="btn fw-bold loginBtn" href="/admuserinfo"
                    style="width: 100%; margin-bottom: 10px; background-color: #a91215; color: white;">See all</a>
            </div>
        </div>
        <div class="col">
            <div class="p-3 rounded d-flex flex-column" style="box-shadow: 0px 2px 5px 2px #0000006e; height: 200px; justify-content: space-between;">
                <p class="fw-bold" style="font-size: 24px; color: #a91215;">Event organizers</p>
                <div class="d-flex">
                    <p class="col-md-5 fw-semibold" style="color: #0000008d;">Active organizers</p>
                    <p class="col fw-semibold" style="color: #0000008d;">12</p>
                </div>

                <a class="btn fw-bold loginBtn" href="/admorganizerinfo"
                    style="width: 100%; margin-bottom: 10px; background-color: #a91215; color: white;">See all</a>
            </div>
        </div>
    </div>
</div>

