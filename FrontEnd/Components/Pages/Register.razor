@page "/register"

<PageTitle>Register</PageTitle>

<style>
    a {
        text-decoration: none !important;
    }

    .loginBtn {
        transition: 0.3s ease;
    }

    .loginBtn:hover {
        background-color: #cb1518 !important;
    }
</style>

<div class="mt-5 mb-5 mx-auto p-5" style="width: 560px; box-shadow: 0px 3px 5px 2px #0000004e; border-radius: 10px;">
    <img src="Assets/registerGroup.png" width="300px" class="d-flex mx-auto mb-3" alt="">
    <p class="mb-3 text-center fw-semibold" style="margin-top: -15px; letter-spacing: 4px;">Welcome to CeylonEvents</p>
    <p class="mb-3 text-center">Glad to see you again! Sign in to your CeylonEvents account below</p>
    <form class="mt-3" style="width: 100%;">
        <div class="mb-3 d-flex" style="gap: 8px;">
            <div>
                <label for="fname" class="form-label fw-semibold">First Name</label>
                <input type="text" class="form-control" style="height: 42px !important;" id="fname"
                    placeholder="Your first name">
            </div>
            <div>
                <label for="lname" class="form-label fw-semibold">Last Name</label>
                <input type="text" class="form-control" style="height: 42px !important;" id="lname"
                    placeholder="Your last name">
            </div>
        </div>
        <div class="mb-3">
            <label for="pno" class="form-label fw-semibold">Contact number</label>
            <input type="text" class="form-control" style="height: 42px !important;" id="pno"
                placeholder="+94 xxxxxxxxx">
        </div>
        <div class="mb-3">
            <label for="nic" class="form-label fw-semibold">NIC</label>
            <input type="text" class="form-control" style="height: 42px !important;" id="nic"
                placeholder="Enter your NIC">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label fw-semibold">Email</label>
            <input type="email" class="form-control" style="height: 42px !important;" id="email"
                placeholder="Enter your email">
        </div>
        <div class="mb-3">
            <label for="role" class="form-label fw-semibold">Role</label>
            <select class="form-select" id="role">
                <option value="1">User</option>
                <option value="2">Event Organizor</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label fw-semibold">Password</label>
            <input type="password" class="form-control" style="height: 42px !important;" id="password"
                placeholder="******">
        </div>
         <div class="mb-3">
            <label for="confirmPassword" class="form-label fw-semibold">Confirm Password</label>
            <input type="password" class="form-control" style="height: 42px !important;" id="confirmPassword"
                placeholder="******">
        </div>

        <div class="mt-5 d-flex" style="gap: 5px;">
            <a class="btn fw-bold loginBtn"
                style="width: 100%; margin-bottom: 10px; background-color: #a91215; color: white;">Sign up</a>
            <img src="Assets/Logo_half_transparent.png" style="height: 38px; margin-bottom: 10px;" alt="" />
        </div>
        <div class="mx-auto" style="width: fit-content;">
            <a class="fw-semibold" href="/login#" style="color: #a91215; cursor: pointer;">Login</a>
        </div>

    </form>
</div>

